generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Trivia {
  id        String  @id @default(uuid())
  title     String
  difficulty String
  category  String
  description   String?
  questions Question[]
  curiosities Json[]
  isPublished Boolean @default(false)
}

model Question {
  id        String  @id @default(uuid())
  question  String
  emoji     String
  explanation String
  trivia    Trivia  @relation(fields: [triviaId], references: [id])
  triviaId  String
  correctMessage String
  wrongMessage String
  answers   Answer[]
}

model Answer {
  id        String  @id @default(uuid())
  answer    String
  isCorrect Boolean
  emoji     String?
  questionId String
  order     Int?
  question  Question @relation(fields: [questionId], references: [id])
}

